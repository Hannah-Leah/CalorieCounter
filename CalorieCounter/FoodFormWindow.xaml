<Window x:Class="CalorieCounter.FoodFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalorieCounter"
        mc:Ignorable="d"
        Title="FoodFormWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Food name:" HorizontalAlignment="Left" Margin="121,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TitleBox" HorizontalAlignment="Left" Margin="198,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Calories(100g):" HorizontalAlignment="Left" Margin="110,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CaloriesBox" HorizontalAlignment="Left" Margin="198,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Protein(g):" HorizontalAlignment="Left" Margin="134,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ProteinBox" HorizontalAlignment="Left" Margin="198,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Carb(g)s:" HorizontalAlignment="Left" Margin="138,137,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CarbsBox" HorizontalAlignment="Left" Margin="198,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Fat(g):" HorizontalAlignment="Left" Margin="142,175,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FatBox" HorizontalAlignment="Left" Margin="200,179,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Image:" HorizontalAlignment="Left" Margin="138,206,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ImagePathBox" HorizontalAlignment="Left" Margin="200,210,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="318" IsReadOnly="True"/>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="528,210,0,0" VerticalAlignment="Top" Width="75" Click="BrowseImage_Click"/>

        <Label Content="Category:" HorizontalAlignment="Left" Margin="131,237,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="CategoryTitle" SelectedValuePath="FoodCategoryId" Margin="197,241,457,155"/>



        <Button Content="Save" Click="Save_Click" Margin="156,305,485,78"/>





    </Grid>
</Window>
