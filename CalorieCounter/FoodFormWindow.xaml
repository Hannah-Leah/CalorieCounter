<Window x:Class="CalorieCounter.FoodFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalorieCounter"
        mc:Ignorable="d"
        Title="FoodFormWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/foodbackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label Content="Food name:" HorizontalAlignment="Left" Margin="189,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TitleBox" HorizontalAlignment="Left" Margin="273,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Calories(100g):" HorizontalAlignment="Left" Margin="181,107,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CaloriesBox" HorizontalAlignment="Left" Margin="273,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Protein(100g):" HorizontalAlignment="Left" Margin="180,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ProteinBox" HorizontalAlignment="Left" Margin="273,138,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Carb(100g)s:" HorizontalAlignment="Left" Margin="180,160,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CarbsBox" HorizontalAlignment="Left" Margin="273,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Fat(100g):" HorizontalAlignment="Left" Margin="189,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FatBox" HorizontalAlignment="Left" Margin="273,199,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Label Content="Image:" HorizontalAlignment="Left" Margin="129,237,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ImagePathBox" HorizontalAlignment="Left" Margin="180,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="318" IsReadOnly="True" Height="48"/>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="503,240,0,0" VerticalAlignment="Top" Width="75" Click="BrowseImage_Click"/>

        <Label Content="Category:" HorizontalAlignment="Left" Margin="129,299,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CategoryComboBox" DisplayMemberPath="CategoryTitle" SelectedValuePath="FoodCategoryId" Margin="195,301,459,90"/>



        <Button Content="Save" Click="Save_Click" Margin="472,334,170,49"/>





    </Grid>
</Window>
